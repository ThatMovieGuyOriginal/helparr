# Basic Configuration
HELPARR_PORT=3000                    # Port to run Helparr on
HELPARR_INSTANCE_NAME="My Helparr"   # Custom instance name
HELPARR_ADMIN_EMAIL=admin@localhost  # Admin contact email

# Data Storage
HELPARR_DATA_PATH=./data             # Local data directory path

# Optional: External Domain & SSL
DOMAIN=helparr.yourdomain.com        # Your domain name
ACME_EMAIL=admin@yourdomain.com      # Email for Let's Encrypt SSL

# Optional: TMDb Health Monitoring
TMDB_HEALTH_CHECK=true               # Enable TMDb API health checks

# Advanced: Redis Configuration
REDIS_MAXMEMORY=256mb                # Redis memory limit
REDIS_POLICY=allkeys-lru             # Redis eviction policy
